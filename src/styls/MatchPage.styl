@import './GeneralTab.styl'
@import './RunesTab.styl'
@import './MasteriesTab.styl'

.player
  margin 2.5px 5px
  height 360px
  border-radius 4px
  overflow hidden

.top-section
  .btn
    padding 0px

.panel-heading
  padding 5px
  .panel-title
    cursor pointer

.panel-group .panel+.panel
  margin-top 0px
  margin-bottom 0px

.panel-group .panel
  border-radius 0px
  max-height 300px
  overflow hidden

.panel-body
  height 260px
  padding 0

.tab
  position relative
  width 100%
  height 100%
  background-color #fff

.team-container
  padding 10px 5px 0

.team-container-100
  background-color rgba(0, 0, 255, 0.2)

.team-container-200
  background-color rgba(255, 0, 0, 0.2)

