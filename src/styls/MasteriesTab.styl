.masteries-tab
  .masteries-tree
    font-size 12px
    width 33%
    height 100%
    float left
    &:last-child
      width 34%

.mrow
  content: ""
  display: table
  clear: both
  display block
  .m
    position relative
    width 33%
    min-height 32px
    float left
    -moz-box-shadow inset 0 0 4px #000000
    -webkit-box-shadow inset 0 0 4px #000000
    box-shadow inset 0 0 4px #000000
    img
      position absolute
      width 100%
      height 100%
      opacity 0.75
    .number-overlay
      position absolute
      width 100%
      height 100%
      opacity 1.0
      font-size 20px
      font-weight 300
      text-shadow 2px 2px 2px #000
      text-align center
      color yellow
      padding-top 2px
