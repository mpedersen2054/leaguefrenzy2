.loading-container, .error-container
  position relative
  width 100%
  height 100%
  text-align center
  .loading
    position relative
    width 200px
    height 200px
    background-image url('http://imgh.us/ripple_6.svg')
    margin 200px auto

.error-container
  text-align left
  padding-top 100px
  .sad-teemo
    background-image url('https://s-media-cache-ak0.pinimg.com/564x/eb/99/b7/eb99b7859b3e32ffc7a6445989821d57.jpg')
    background-size cover
    width 300px
    height 420px
    border-radius 20px
    margin-right 40px
  h1, h3, .description
    margin 0
  h1
    font-size 60px
    font-weight 600
    text-transform uppercase
  h3
    font-size 30px
    text-transform uppercase
    margin-bottom 20px
  .description
    font-size 20px
