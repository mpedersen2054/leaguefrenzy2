
body
  font-size 14px
  letter-spacing 1px

img
  max-width 100%
  vertical-align top

.col-xs-15
  width 20%
  float left

@media (min-width: 768px)
  .col-sm-15
    width 20%
    float left

@media (min-width: 992px)
  .col-md-15
    width 20%
    float left

@media (min-width: 1200px)
  .col-lg-15
    width 20%
    float left

.player
  margin 2.5px 5px
  height 360px
  border-radius 4px
  overflow hidden

.top-section
  padding 10px 0

.panel-heading
  padding 5px
  .panel-title
    cursor pointer


.panel-group .panel+.panel
  margin-top 0px

.panel-group .panel
  border-radius 0px
  max-height 300px
  overflow hidden

.panel-body
  height 260px
  padding 0

.tab
  position relative
  width 100%
  height 100%
  background-color #fff



.general-tab
  font-weight 500
  font-size 15px
  .visual-data
    margin 20px 20px
    .champion-image
      width 80px
      height 80px
      margin-right 10px
      float left
      border-radius 2px
    .summoner-spell
      width 40px
      height 40px
    .summoner-keystone
      display block
      width 40px
      height 40px

  .info-data
    margin 20px
    clear both


.runes-tab
  .rune
    position relative
    margin 10px
    div
      font-size 8px
      font-weight 300
    img
      width 75%
      height 75%



.masteries-tab
  .masteries-tree
    font-size 12px
    width 33%
    height 100%
    float left
    &:last-child
      width 34%

.mrow
  content: ""
  display: table
  clear: both
  display block
  .m
    position relative
    width 33%
    min-height 32px
    float left
    -moz-box-shadow inset 0 0 4px #000000
    -webkit-box-shadow inset 0 0 4px #000000
    box-shadow inset 0 0 4px #000000
    img
      position absolute
      width 100%
      height 100%
      opacity 0.75
    .number-overlay
      position absolute
      width 100%
      height 100%
      opacity 1.0
      font-size 20px
      font-weight 300
      text-shadow 2px 2px 2px #000
      text-align center
      color yellow
      padding-top 2px

